// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "file_scan_exclusions": [
        "**/.git",
        "**/.svn",
        "**/.hg",
        "**/CVS",
        "**/.DS_Store",
        "**/node_modules",
        "**/node_modules/**",
        "**/.vscode-test",
        "**/__pycache__",
        "**/.mypy_cache",
        "**/.ruff_cache",
        "**/.venv",
        "**/venv"
    ],
    "search": {
        "case_sensitive": false,
        "include_ignored": false,
        "whole_word": false,
        "button": true,
        "center_on_match": true,
        "regex": false
    },
    "use_smartcase_search": true,
    "auto_update_extensions": {
        "opencode": false
    },
    "completions": {
        "words_min_length": 3
    },
    "show_signature_help_after_edits": true,
    "show_completions_on_input": true,
    "context_servers": {
        "mcp-server-context7": {
            "enabled": true,
            "settings": {
                "context7_api_key": ""
            }
        },
        "memory": {
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ],
            "command": "npx",
            "enabled": false,
            "env": {
                "MEMORY_FILE_PATH": ""
            }
        },
        "time": {
            "args": [
                "mcp-server-time"
            ],
            "command": "uvx"
        }
    },
    "agent": {
        "play_sound_when_agent_done": true,
        "default_profile": "write",
        "always_allow_tool_actions": true,
        "default_model": {
            "provider": "google",
            "model": "gemini-3-flash-preview"
        },
        "model_parameters": []
    },
    "wsl_connections": [
        {
            "distro_name": "Ubuntu-24.04",
            "user": "vikiru",
            "projects": [
                {
                    "paths": [
                        "/home/vikiru/projects"
                    ]
                }
            ]
        }
    ],
    "base_keymap": "VSCode",
    "minimap": {
        "show": "never"
    },
    "autosave": {
        "after_delay": {
            "milliseconds": 1000
        }
    },
    "features": {
        "edit_prediction_provider": "supermaven"
    },
    "file_types": {
        "dotenv": [
            ".env*"
        ],
        "jsonc": [
            "**/frontmatter.json",
            "**/.frontmatter/config/*.json"
        ]
    },
    "use_on_type_format": false,
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "vim_mode": false,
    "icon_theme": "VSCode Icons for Zed (Dark)",
    "ui_font_size": 16,
    "buffer_font_size": 15,
    "theme": {
        "mode": "dark",
        "light": "One Light",
        "dark": "Ayu Dark"
    },
    "indent_guides": {
        "line_width": 1,
        "active_line_width": 2,
        "coloring": "indent_aware",
        "background_coloring": "indent_aware"
    },
    "lsp": {
        "tailwindcss-language-server": {
            "settings": {
                "classFunctions": [
                    "cva",
                    "cx"
                ],
                "emmetCompletions": true,
                "experimental": {
                    "classRegex": [
                        [
                            "@apply\\s+([^;\\n]+)",
                            "\\b([a-z-]+(?:-[a-z-]+)*)\\b"
                        ],
                        "class\\s*=\\s*\"([^\"]*)\"",
                        "clx\\s*=\\s*\"([^\"]*)\"",
                        "class\\s*=\\s*'([^']*)'",
                        [
                            "html`([^`]*)`",
                            "class\\s*=\\s*\"([^\"]*)\""
                        ],
                        [
                            "html`([^`]*)`",
                            "class\\s*=\\s*'([^']*)'"
                        ],
                        [
                            "innerHTML\\s*=\\s*`([^`]*)`",
                            "class\\s*=\\s*\"([^\"]*)\""
                        ],
                        [
                            "clx\\s*\\(\\s*\\{([^}]*)\\}\\s*\\)"
                        ],
                        [
                            "cn\\s*\\(\\s*\\{([^}]*)\\}\\s*\\)"
                        ]
                    ]
                }
            }
        }
    },
    "languages": {
        "JavaScript": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "language_servers": [
                "biome",
                "!eslint",
                "!prettier",
                "vtsls",
                "tailwindcss-language-server"
            ]
        },
        "TypeScript": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "language_servers": [
                "biome",
                "!eslint",
                "!prettier",
                "tsgo",
                "vtsls",
                "tailwindcss-language-server"
            ],
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true,
                "source.addMissingImports.biome": true
            }
        },
        "TSX": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "language_servers": [
                "biome",
                "!eslint",
                "!prettier",
                "tsgo",
                "vtsls",
                "tailwindcss-language-server"
            ],
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true,
                "source.addMissingImports.biome": true
            }
        },
        "JSON": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            }
        },
        "JSONC": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            }
        },
        "CSS": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            }
        },
        "GraphQL": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            }
        }
    },
